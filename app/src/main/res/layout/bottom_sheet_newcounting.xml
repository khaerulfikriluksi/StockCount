<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    android:id="@+id/bottompopup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:windowSoftInputMode="adjustResize"
    android:background="@drawable/popup_newscan"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginRight="180dp"
        android:layout_marginLeft="180dp"
        android:layout_height="3dp"
        android:background="@color/black"
        android:layout_marginBottom="10dp"/>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_marginLeft="24dp"
        android:id="@+id/eidscan_head"
        android:layout_marginRight="24dp"
        app:expandedHintEnabled="false"
        android:hint="No. Document"
        android:layout_height="wrap_content">

        <AutoCompleteTextView
            android:id="@+id/eidscan"
            android:layout_width="match_parent"
            android:enabled="false"
            android:paddingLeft="15dp"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:inputType="textCapWords"
            android:maxLines="1"
            android:completionThreshold="1"
            android:gravity="center_vertical"
            android:layout_height="50dp"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="24dp"
        android:id="@+id/etglscan_head"
        android:layout_marginRight="24dp"
        app:expandedHintEnabled="false"
        android:hint="Tanggal Penghitungan"
        android:layout_height="wrap_content">

        <AutoCompleteTextView
            android:id="@+id/etglscan"
            android:layout_width="match_parent"
            android:enabled="false"
            android:paddingLeft="15dp"
            android:singleLine="true"
            android:text="2022-01-19"
            android:maxLines="1"
            android:completionThreshold="1"
            android:gravity="center_vertical"
            android:layout_height="50dp"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="24dp"
        android:id="@+id/enamascan_head"
        android:layout_marginRight="24dp"
        app:expandedHintEnabled="false"
        android:hint="Nama Penghitung"
        android:layout_height="wrap_content">

        <AutoCompleteTextView
            android:id="@+id/enamascan"
            android:enabled="false"
            android:layout_width="match_parent"
            android:paddingLeft="15dp"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:maxLines="1"
            android:inputType="textCapWords"
            android:completionThreshold="1"
            android:gravity="center_vertical"
            android:layout_height="50dp"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:id="@+id/ecabang_head"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        app:expandedHintEnabled="false"
        android:hint="Branch"
        android:layout_height="wrap_content">

        <AutoCompleteTextView
            android:id="@+id/ecabang"
            android:layout_width="match_parent"
            android:paddingLeft="15dp"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:maxLines="1"
            android:inputType="none"
            android:completionThreshold="1"
            android:gravity="center_vertical"
            android:layout_height="50dp"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="24dp"
        android:id="@+id/elokasiscan_head"
        android:layout_marginRight="24dp"
        app:expandedHintEnabled="false"
        android:hint="Lokasi/Rak"
        android:layout_height="wrap_content">

        <AutoCompleteTextView
            android:id="@+id/elokasiscan"
            android:layout_width="match_parent"
            android:paddingLeft="15dp"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:maxLines="1"
            android:inputType="textCapWords"
            android:completionThreshold="1"
            android:gravity="center_vertical"
            android:layout_height="50dp"/>

    </com.google.android.material.textfield.TextInputLayout>


    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <Button
            android:id="@+id/bnewscan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mulai Scan"
            android:textAllCaps="false"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:orientation="vertical"/>

</LinearLayout>