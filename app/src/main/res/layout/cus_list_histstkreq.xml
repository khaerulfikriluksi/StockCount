<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/str_hist_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--    android:descendantFocusability="blocksDescendants"-->

    <androidx.cardview.widget.CardView
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/str_hist_cardlist"
        app:cardElevation="2dp"
        android:layout_marginTop="5dp"
        app:cardUseCompatPadding="false"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <LinearLayout
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="left"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/str_hist_noreq"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="UC01102022022-03sF"
                            android:textColor="@color/warna_text"
                            android:textSize="15dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:gravity="right"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/str_hist_tgl"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textColor="@color/warna_text"
                            android:layout_alignParentLeft="true"
                            android:gravity="center"
                            android:text="2022-01-01"
                            android:textSize="14dp" />

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="left"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/str_hist_namareq"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="Testing Request"
                            android:textColor="@color/warna_text"
                            android:textSize="15dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:gravity="right"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/str_hist_status"
                            android:elevation="5dp"
                            android:layout_width="90dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/round_kuning"
                            android:textColor="@color/white"
                            android:layout_alignParentLeft="true"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textAllCaps="true"
                            android:text="proses"
                            android:textSize="14dp" />

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="left"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/str_hist_pembuat"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:textAllCaps="true"
                            android:text="fikri"
                            android:textColor="@color/warna_text"
                            android:textSize="15dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:gravity="right"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textColor="@color/warna_text"
                            android:layout_alignParentLeft="true"
                            android:gravity="center"
                            android:text="Diproses oleh : "
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/str_hist_diprosesoleh"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textColor="@color/warna_text"
                            android:layout_alignParentLeft="true"
                            android:gravity="center"
                            android:textAllCaps="true"
                            android:text="khaerul fikri"
                            android:textSize="14dp" />

                    </LinearLayout>
                </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>