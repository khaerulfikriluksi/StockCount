<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/din_hist_cardlist"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardElevation="6dp"
        android:layout_marginTop="5dp"
        app:cardUseCompatPadding="false"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:layout_marginLeft="10dp"
                android:id="@+id/din_hist_check"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="left"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/din_hist_noukti"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="GDG1UC000UC0010920-29"
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:gravity="right"
                        android:layout_height="match_parent">

                        <ImageButton
                            android:id="@+id/din_hist_bremarks"
                            android:visibility="gone"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/ico_memo"
                            android:clickable="true"
                            android:foreground="?android:attr/selectableItemBackground" />

                        <ImageButton
                            android:id="@+id/din_hist_bexpand"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/ico_down"
                            android:layout_width="30dp"
                            android:layout_height="30dp"/>

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/din_hist_expand"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:visibility="visible"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:paddingLeft="25dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:gravity="left"
                            android:text="Pengirim : "
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/din_hist_pengirim"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:gravity="left"
                            android:text="[UC000] GUDANG FOOTWEAR"
                            android:textSize="14dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:paddingLeft="25dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:gravity="left"
                            android:text="Penerima : "
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/din_hist_penerima"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:gravity="left"
                            android:text="[UC001] NIPAH MAKASSAR"
                            android:textSize="14dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:paddingLeft="25dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:gravity="left"
                            android:text="Qty (Dikirim) : "
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/din_hist_dikirim"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:gravity="left"
                            android:text="200 Pcs"
                            android:textSize="14dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:gravity="right"
                            android:layout_height="match_parent">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentLeft="true"
                                android:gravity="left"
                                android:text="Dibuat : "
                                android:textSize="14dp" />

                            <TextView
                                android:id="@+id/din_hist_dibuat"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentLeft="true"
                                android:gravity="left"
                                android:text="2021-01-01"
                                android:textSize="14dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:paddingLeft="25dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:gravity="left"
                            android:text="Qty (Diterima) : "
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/din_hist_diterima"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:gravity="left"
                            android:text="187 Pcs"
                            android:textSize="14dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:gravity="right"
                            android:layout_height="match_parent">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentLeft="true"
                                android:gravity="left"
                                android:text="Masuk : "
                                android:textSize="14dp" />

                            <TextView
                                android:id="@+id/din_hist_masuk"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentLeft="true"
                                android:gravity="left"
                                android:text="2021-01-01"
                                android:textSize="14dp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>