<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    android:id="@+id/bottompopup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:windowSoftInputMode="adjustResize"
    android:background="@drawable/popup_newscan"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/warna_text"
        android:textSize="14dp"
        android:layout_marginLeft="24dp"
        android:text="Kosongkan jika tidak ada perubahan"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/warna_text"
        android:layout_marginBottom="10dp"
        android:textSize="14dp"
        android:layout_marginLeft="24dp"
        android:text="*Password sensitif huruf besar dan kecil"
        android:layout_height="wrap_content"/>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_marginLeft="24dp"
        android:id="@+id/updt_username_head"
        app:helperTextTextColor="@color/merah"
        android:layout_marginRight="24dp"
        android:hint="Username"
        android:layout_height="wrap_content">

        <AutoCompleteTextView
            android:id="@+id/updt_username"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:completionThreshold="1"
            android:gravity="center_vertical"
            android:imeOptions="actionDone"
            android:textSize="15dp"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:paddingLeft="15dp"
            android:singleLine="true" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="24dp"
        android:id="@+id/updt_email_head"
        app:helperTextTextColor="@color/merah"
        android:layout_marginRight="24dp"
        android:hint="Email"
        android:layout_height="wrap_content">

        <AutoCompleteTextView
            android:id="@+id/updt_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:completionThreshold="1"
            android:gravity="center_vertical"
            android:textSize="15dp"
            android:imeOptions="actionDone"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:paddingLeft="15dp"
            android:singleLine="true" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="24dp"
        android:id="@+id/updt_alias_head"
        app:helperTextTextColor="@color/merah"
        android:layout_marginRight="24dp"
        android:hint="Alias"
        android:layout_height="wrap_content">

        <AutoCompleteTextView
            android:id="@+id/updt_alias"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:completionThreshold="1"
            android:gravity="center_vertical"
            android:textSize="15dp"
            android:textAllCaps="true"
            android:imeOptions="actionDone"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:paddingLeft="15dp"
            android:singleLine="true" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:passwordToggleEnabled="true"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginTop="8dp"
        app:helperTextTextColor="@color/merah"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:maxLength="12"
        android:id="@+id/updt_newpassword_head"
        android:hint="New Password"
        android:layout_height="wrap_content">

        <AutoCompleteTextView
            android:id="@+id/updt_newpassword"
            android:fontFamily="@font/roboto_regular"
            android:layout_width="match_parent"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:paddingLeft="15dp"
            android:singleLine="true"
            android:textSize="15dp"
            android:maxLines="1"
            android:gravity="center_vertical"
            android:layout_height="50dp"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:passwordToggleEnabled="true"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginTop="8dp"
        app:helperTextTextColor="@color/merah"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:maxLength="12"
        android:id="@+id/updt_confpassword_head"
        android:hint="Confirm New Password"
        android:layout_height="wrap_content">

        <AutoCompleteTextView
            android:id="@+id/updt_confpassword"
            android:fontFamily="@font/roboto_regular"
            android:layout_width="match_parent"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:paddingLeft="15dp"
            android:singleLine="true"
            android:textSize="15dp"
            android:maxLines="1"
            android:gravity="center_vertical"
            android:layout_height="50dp"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:passwordToggleEnabled="true"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:helperTextTextColor="@color/merah"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:maxLength="12"
        android:id="@+id/updt_oldpassword_head"
        android:hint="Old Password"
        android:layout_height="wrap_content">

        <AutoCompleteTextView
            android:id="@+id/updt_oldpassword"
            android:fontFamily="@font/roboto_regular"
            android:layout_width="match_parent"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:paddingLeft="15dp"
            android:singleLine="true"
            android:textSize="15dp"
            android:maxLines="1"
            android:gravity="center_vertical"
            android:layout_height="50dp"/>

    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
            android:id="@+id/updt_breset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:spinning_bar_padding="6dp"
            app:spinning_bar_color="@color/white"
            android:layout_centerInParent="true"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:background="@drawable/round_ungu"
            android:fontFamily="@font/roboto_regular"
            android:text="SAVE"
            android:textColor="@android:color/white" />
    </LinearLayout>

</LinearLayout>